/**cat.wxss**/
@import "../../weui.wxss";

.container{
  margin: 0 15rpx 0 15rpx;
}
.cat-con{
  width: 100%;
}
.cat-message{
  padding: 30rpx;
  border-bottom: solid 1px rgba(0,0,0,0.1);
}
.cat-avatar{
  display: inline-block;
  width: 15%;
  vertical-align: middle;
}
.logo{
  display: inline-block;
  width: 120rpx;
  height: 120rpx;
  overflow: hidden;
  border-radius: 50%;
  vertical-align: middle;
}
.cat-name{
  display: inline-block;
  width: 20%;
  vertical-align: middle;
}
.name{
  display: inline-block;
  vertical-align: middle;
  font-size: large;
  margin-left: 40rpx;
}
.cat-details{
  display: inline-block;
  width: 65%;
  vertical-align: middle;
}
.intro{
  display: block;
  color: #888888;
  overflow: scroll;
  text-overflow: clip;
  white-space: nowrap;
  width: 100%;
}
.cat-picture{
  text-align: center;
  padding: 30rpx;
}
.big{
  display: inline-block;
  height: 400rpx;
}
.details{
  margin: 0 20rpx 0 20rpx;
}
.detail{
  display: inline-block;
  flex-direction: row;
  width:50%;
  margin-bottom: 30rpx;
}
.top{
  display: block;
  color: grey;
  font-size: small;
}
.down{
  display: block;
}
.sex{
  width:50rpx;
  height:50rpx;
  vertical-align: middle;
}

