mp-searchbar{
  width: 100%;

}
.campus{
  /* display: flex; */
  text-align: center;
  width: 100%;
  margin: 20rpx 0 10rpx 0;
}
.campus button{
  flex-grow: 1;
  display: inline-block;
  background-color: white;
  vertical-align: middle;
  margin-right:20rpx;
}
.catsshow{
  width: 100%;
  margin-top: 50rpx;
}
/* cats-container */
.bottom-container{
  width: 96%;
}
.cats-container{
  width: 100%;
  border-bottom: solid 1px rgba(0,0,0,0.1);
  padding: 10rpx 0 10rpx 0;
}
.cat-avatar{
  display: inline-block;
  width: 15%;
  vertical-align: middle;
}
.cathead{
  display: inline-block;
  width: 120rpx;
  height: 120rpx;
  overflow: hidden;
  border-radius: 50%;
  vertical-align: middle;
}
.cat-name{
  display: inline-block;
  width: 20%;
  vertical-align: middle;
}
.name{
  display: inline-block;
  vertical-align: middle;
  font-size: large;
  margin-left: 20rpx;
}
.cat-details{
  display: inline-block;
  width: 65%;
  vertical-align: middle;
}
.tags{
  border-radius: 10rpx;
  padding:5rpx;
  margin: 0 10rpx 0 0;
  font-size: smaller;
}
.active {
  border: solid 1px #1AAD19;
  color: #1AAD19;
}
.noactive{
  border: solid 1px rgba(0,0,0,0.1);
  color: rgba(0,0,0,0.1);
}
.intro{
  display: block;
  color: #888888;
}
.weui-check__label{
  display: inline-block;
  flex-grow: 1;
}
radio-group{
  display: flex;
}
/* 搜索框的样式 */
.searchbar-result{margin-top:0;font-size:14px}.searchbar-result .weui-cell__bd{padding:2px 0 2px 20px;color:var(--weui-FG-1)}.searchbar-result:before{display:none}
.weui-search-bar{
  width: 100%;

}
.weui-icon-search{
  font-size: 0;
}
/* 公告样式 */
.bulletins{
  width: 85%;
  margin: 10rpx 50rpx;
  border-radius: 20rpx;
  text-align: left;
}
.bulletin{
  display: block;
  font-size: 30rpx;
  border-bottom: solid 1rpx rgba(0,0,0,0.2);
}
/* 悬浮按钮 */
.fly-con{
  height: 120rpx;
  width: 120rpx;
  border-radius: 100%;
  position: fixed;
  bottom: 150rpx;
  right: 20rpx;
  /* display: flex; */
  align-items: center;
  justify-content: center;
  z-index: 9;
  /* background-color: rgb(136,136,136,0.8); */
  background-color: white;
  box-shadow: 0rpx 10rpx 10rpx 1rpx rgba(0,0,0,0.1);
  text-align: center;
}
.fly{
  /* width: 70rpx; */
  font-size: 30rpx;
  color:white;
  color: rgb(87,107,149);
}
.imgcon{
  display: flex;
  margin-top: 10rpx;
  width: 100%;
}
.buicon{
  width: 50rpx;
  height: 50rpx;
  margin:auto;
}
.page{background-color:var(--weui-BG-2)}
.weui-dialog__btn{
  font-weight: 500;
}
.searchbar-result{
  width: 100%;
}
.weui-dialog__hd{
  padding: 30rpx 24rpx 0rpx 24rpx;
}
.weui-dialog__title{
  font-weight: 500;
}
.search {
  display: inline;
  color: #576b95;
}
.issearch{
  width: 80rpx;
  height: 80rpx;
}

.page{background-color:var(--weui-BG-2)}

.weui-loading {
  margin: 0 5px;
  width: 20px;
  height: 20px;
  display: inline-block;
  vertical-align: middle;
  -webkit-animation: weuiLoading 1s steps(12, end) infinite;
  animation: weuiLoading 1s steps(12, end) infinite;
  background-size: 100%;
}
.weui-loadmore {
  width: 65%;
  margin: 1.5em auto;
  line-height: 1.6em;
  font-size: 14px;
  text-align: center;
}
.weui-loadmore__tips {
  display: inline-block;
  vertical-align: middle;
}
.nomore{
  background-color: #f6f7f8;
}
.weui-cell_access{
  padding: 5px;
}